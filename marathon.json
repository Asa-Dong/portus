{
  "id": "/sys/portus",
  "apps": [
    {
      "id": "web",
      "instances": 1,
      "cpus": 2,
      "mem": 2048,
      "disk": 0,
      "requirePorts": true,
      "backoffSeconds": 1,
      "backoffFactor": 1.15,
      "maxLaunchDelaySeconds": 3600,
      "labels": {
        "owner": "sys"
      },
      "container": {
        "type": "DOCKER",
        "docker": {
          "image": "h0tbird/portus:latest",
          "network": "BRIDGE",
          "portMappings": [
            { "containerPort": 80, "hostPort": 0 }
          ],
          "privileged": false,
          "parameters": [
            { "key": "env", "value": "PORTUS_PORT=80" },
            { "key": "env", "value": "DB_HOST=db-portus-sys.marathon.cell-1.mad.mesos" },
            { "key": "env", "value": "DB_USERNAME=portus" },
            { "key": "env", "value": "DB_PASSWORD=portus" },
            { "key": "env", "value": "DB_DATABASE=portus" }
          ],
          "forcePullImage": true
        }
      },
      "healthChecks": [
        {
          "gracePeriodSeconds": 120,
          "intervalSeconds": 30,
          "maxConsecutiveFailures": 3,
          "path": "/",
          "portIndex": 0,
          "protocol": "HTTP",
          "timeoutSeconds": 5
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 1
      }
    },
    {
      "id": "db",
      "instances": 1,
      "cpus": 2,
      "mem": 2048,
      "disk": 0,
      "requirePorts": true,
      "backoffSeconds": 1,
      "backoffFactor": 1.15,
      "maxLaunchDelaySeconds": 3600,
      "labels": {
        "owner": "sys"
      },
      "container": {
        "type": "DOCKER",
        "docker": {
          "image": "library/mariadb:latest",
          "network": "BRIDGE",
          "portMappings": [
            { "containerPort": 3306, "hostPort": 0 }
          ],
          "privileged": false,
          "parameters": [
            { "key": "env", "value": "MYSQL_ROOT_PASSWORD=portus" },
            { "key": "env", "value": "MYSQL_USER=portus" },
            { "key": "env", "value": "MYSQL_PASSWORD=portus" },
            { "key": "env", "value": "MYSQL_DATABASE=portus" }
          ],
          "forcePullImage": true
        }
      },
      "healthChecks": [
        {
          "gracePeriodSeconds": 120,
          "intervalSeconds": 30,
          "maxConsecutiveFailures": 3,
          "portIndex": 0,
          "protocol": "TCP",
          "timeoutSeconds": 5
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 1
      }
    }
  ]
}
