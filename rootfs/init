#!/bin/bash

#------------------------------------------------------------------------------
# Config files:
#------------------------------------------------------------------------------

CONFIG_FILE='/portus/config/config.yml'
DB_CONFIG_FILE='/portus/config/database.yml'
SECRETS_CONFIG_FILE='/portus/config/secrets.yml'
PUMA_CONFIG_FILE='/portus/config/puma.rb'

#------------------------------------------------------------------------------
# Search and replace:
#------------------------------------------------------------------------------

# Portus config file:
sed -i ${CONFIG_FILE} \
  -e "s#XXX-PORTUS_MACHINE_FQDN-XXX#${PORTUS_MACHINE_FQDN:-127.0.0.1}#" \
  -e "s#XXX-PORTUS_DELETE_ENABLED-XXX#${PORTUS_DELETE_ENABLED:-false}#" \
  -e "s#XXX-PORTUS_CHECK_SSL_USAGE_ENABLED-XXX#${PORTUS_CHECK_SSL_USAGE_ENABLED:-true}#"

# Database config file:
sed -i ${DB_CONFIG_FILE} \
  -e "s#XXX-MARIADB_ADAPTER-XXX#${MARIADB_ADAPTER:=mysql2}#" \
  -e "s#XXX-MARIADB_ENCODING-XXX#${MARIADB_ENCODING:=utf8}#" \
  -e "s#XXX-MARIADB_HOST-XXX#${MARIADB_HOST:=db}#" \
  -e "s#XXX-MARIADB_PORT-XXX#${MARIADB_PORT:=3306}#" \
  -e "s#XXX-MARIADB_USER-XXX#${MARIADB_USER:=root}#" \
  -e "s#XXX-MARIADB_PASSWORD-XXX#${MARIADB_PASSWORD:=portus}#" \
  -e "s#XXX-MARIADB_DATABASE-XXX#${MARIADB_DATABASE:=portus}#"

# Secrets config file:
sed -i ${SECRETS_CONFIG_FILE} \
  -e "s#XXX-PORTUS_SECRET_KEY_BASE-XXX#${PORTUS_SECRET_KEY_BASE:-secret-goes-here}#" \
  -e "s#XXX-PORTUS_ENCRYPTION_PRIVATE_KEY_PATH-XXX#${PORTUS_ENCRYPTION_PRIVATE_KEY_PATH:-/certs/server-key.pem}#" \
  -e "s#XXX-PORTUS_PORTUS_PASSWORD-XXX#${PORTUS_PORTUS_PASSWORD:-portus}#"

# Puma config file:
sed -i ${PUMA_CONFIG_FILE} \
  -e "s#XXX-PUMA_WORKER_TIMEOUT-XXX#${PUMA_WORKER_TIMEOUT:=60}#"

#------------------------------------------------------------------------------
# Set Rack and Rails environment:
#------------------------------------------------------------------------------

export RACK_ENV=${RACK_ENV:-production}
export RAILS_ENV=${RAILS_ENV:-production}

#------------------------------------------------------------------------------
# Populate the database:
#------------------------------------------------------------------------------

function mysql_alive() {
  local RETRIES=30; while [ ${RETRIES} -gt 0 ]; do
    timeout -t 2 bash -c "echo > /dev/tcp/${MARIADB_HOST}/${MARIADB_PORT}" &> /dev/null && return 0
    sleep 1; RETRIES=$((RETRIES - 1)); echo -n '.'
  done; echo; return 1
}

echo -n 'Waiting for the database '
mysql_alive || { echo; echo "Ops! Where is ${MARIADB_HOST}:${MARIADB_PORT} ?"; exit 1; }
mysql -h ${MARIADB_HOST} -P ${MARIADB_PORT} -u ${MARIADB_USER} -p${MARIADB_PASSWORD} ${MARIADB_DATABASE} \
-e "show tables" | grep -q 'registries' || {
  env bundle exec rake db:migrate:reset
  env bundle exec rake db:seed
}

#------------------------------------------------------------------------------
# Debug:
#------------------------------------------------------------------------------

[[ "${DEBUG}" == "true" ]] && {
  echo "### ${CONFIG_FILE}"; cat ${CONFIG_FILE}
  echo "### ${DB_CONFIG_FILE}"; cat ${DB_CONFIG_FILE}
  echo "### ${SECRETS_CONFIG_FILE}"; cat ${SECRETS_CONFIG_FILE}
}

#------------------------------------------------------------------------------
# Run:
#------------------------------------------------------------------------------

[ "${PORT0}" ] && [ ! "${PUMA_PORT}" ] && PUMA_PORT="${PORT0}"
export SSL_CERT_DIR=${SSL_CERT_DIR:-/certs:/usr/local/share/ca-certificates:/etc/ssl/certs} && update-ca-certificates
[ -f "${PUMA_SSL_CRT}" ] && cat ${PUMA_SSL_CRT} >> /etc/ssl/certs/ca-certificates.crt

[[ "${PORTUS_CHECK_SSL_USAGE_ENABLED:-true}" == "true" && "${PUMA_SSL_KEY}" && "${PUMA_SSL_CRT}" ]] && \
exec env puma -e ${RACK_ENV} -b "ssl://${PUMA_IP:-0.0.0.0}:${PUMA_PORT:-443}?key=${PUMA_SSL_KEY}&cert=${PUMA_SSL_CRT}" -w ${PUMA_WORKERS:-3} -C /portus/config/puma.rb ||
exec env puma -e ${RACK_ENV} -b "tcp://${PUMA_IP:-0.0.0.0}:${PUMA_PORT:-80}" -w ${PUMA_WORKERS:-3} -C /portus/config/puma.rb
